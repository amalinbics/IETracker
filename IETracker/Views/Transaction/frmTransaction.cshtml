
@{
    ViewBag.Title = "Transaction";
}

<h2>Transaction</h2>
<hr />

<form id="transaction">


    <div class="form-group">
        <label>Category</label>
        <div class="tt-container">
            <input id="category" type="text" value="" class="typeahead form-control" required />
        </div>
    </div>

    <div class="form-group">
        <label>Transaction Type</label>
        <select id="transactionType" class="form-control">
            <option value="1">Income</option>
            <option value="2">Expense</option>
        </select>
    </div>

    <div class="form-group">
        <label>Date</label>
        <input id="date" name="date" type="text" value="" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Description</label>
        <input id="description" name="description" type="text" value="" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Amount</label>
        <input id="amount" name="amount" type="text" value="" class="form-control" required />
    </div>

    <button class="btn btn-primary">Submit</button>


</form>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    <script>

        var transactionType = ['Income', 'Expense']
        $(document).ready(
            function () {

                var transactionId = @ViewBag.id;

                console.log(transactionId);

                var vm = {};
                var transactionCategory = new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    remote: {
                        url: '/api/category?query=%QUERY',
                        wildcard: '%QUERY'
                    }
                });

                $("#category").typeahead({
                    highlight: true,
                    minLenght: 1
                },
                    {
                        name: "category",
                        display: "name",
                        source: transactionCategory
                    }).on("typeahead:select", function (e, category) {
                        console.log(category);
                        console.log(category.id);
                        vm.categoryId = category.id;
                    }).on("typeahead:")

                if (transactionId != 0) {
                    $.ajax({
                        url: "/api/transaction/" + transactionId,
                        method: "get",
                        success: function (result) {
                            console.log(result);
                            $("#date").val(result.transactionDate);
                            $("#description").val(result.description);
                            $("#amount").val(result.amount);
                            $("#category").typeahead("val", result.category.name);
                            $("#transactionType").val(result.transactionType.id);
                            vm.categoryId = result.category.id;
                        }
                    })
                }

                var validator = $("#transaction").validate({
                    submitHandler: function () {
                        console.log("submit called");

                        vm.id = transactionId;
                        vm.transactionTypeId = $("#transactionType").children("option:selected").val();
                        vm.transactionDate = $("#date").val();
                        vm.description = $("#description").val();
                        vm.amount = $("#amount").val();

                        if (transactionId == 0) {



                            $.ajax({
                                url: "/api/transaction/",
                                method: "post",
                                data: vm
                            }).done(function () {
                                toastr.success("Transaction saved successfully");
                                vm = {};
                                $("#date").val("");
                                $("#description").val("");
                                $("#amount").val("");
                                $("#category").typeahead("val", "");
                                validator.resetForm();
                            }).fail(function () {
                                toastr.fail("Sorry something went wrong");
                            })
                        }
                        else {

                            try {
                                console.log(vm);

                                $.ajax({
                                    url: "/api/transaction/" + transactionId,
                                    method: "put",
                                    data: vm
                                }).done(function () {
                                    toastr.success("Transaction saved successfully");                                 
                                }).fail(function () {
                                    toastr.fail("Sorry something went wrong");
                                })
                            } catch (e) {
                                return false;
                            }


                        }

                        return false;
                    }
                });
            });

    </script>
}

